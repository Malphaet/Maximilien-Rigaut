CC = gcc
CFLAGS = -W -Wall -ansi -pedantic
LDFLAGS = 
EXEC=lib_number.o
TEST=test_lib_rational test_lib_number test_lib_complex

all: $(EXEC)

test: $(TEST)

test_lib_rational: test_lib_rational.o lib_rational.o
	$(CC) $(LDFLAGS) -o $@ $^ -lm

test_lib_complex: test_lib_complex.o lib_complex.o
	$(CC) $(LDFLAGS) -o $@ $^ -lm

test_lib_number: test_lib_number.o lib_number.o
	$(CC) $(LDFLAGS) -o $@ $^

lib_number.o: lib_number.o lib_complex.o lib_rational.o
	$(CC) $(LDFLAGS) -o $@ $^

test_lib_rational.o: test_lib_rational.c lib_rational.h
	$(CC) $(CFLAGS) -o $@ -c $< -lm


%.o: %.c %.h
	$(CC) $(CFLAGS) -o $@ -c $< -lm

clean: 
	rm *.o
	
cleaner: clean
	rm $(TEST) $(EXEC)

